<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_recyclerview_item_linearlayout"
    android:layout_width="@dimen/_120sdp"
    android:layout_weight="1"
    android:layout_height="@dimen/_40sdp"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/ic_main_button_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/generic_favorite_icon" />

    <TextView
        android:id="@+id/select_recyclerview_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:gravity="center"
        android:text="Generic"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp" />
</LinearLayout>